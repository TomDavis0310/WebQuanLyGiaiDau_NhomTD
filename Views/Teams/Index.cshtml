@model IEnumerable<WebQuanLyGiaiDau_NhomTD.Models.Team>
@using WebQuanLyGiaiDau_NhomTD.Models.UserModel

@{
    ViewData["Title"] = "Danh Sách Đội Bóng";
}

<div class="container mt-4">
    <h1 class="text-center text-primary mb-4">📋 Danh Sách Đội Bóng</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Tìm kiếm đội bóng..." />
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Tìm
                    </button>
                    @if (!string.IsNullOrEmpty((string)ViewData["CurrentFilter"]))
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Xóa bộ lọc
                        </a>
                    }
                </div>
            </form>
        </div>
        <div class="col-md-6 text-end">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-lg"></i> Thêm Đội Mới
                </a>
            }
        </div>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card team-card h-100 shadow-sm">
                        <div class="team-logo-container">
                            @if (!string.IsNullOrEmpty(item.LogoUrl))
                            {
                                <img src="@item.LogoUrl" class="card-img-top team-logo" alt="@item.Name" />
                            }
                            else
                            {
                                <div class="team-logo-placeholder">
                                    <i class="bi bi-people-fill"></i>
                                </div>
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-primary">@item.Name</h5>
                            <p class="card-text">
                                <i class="bi bi-person-badge me-2"></i>@item.Coach
                            </p>
                            <div class="card-actions">
                                <a asp-action="Details" asp-route-id="@item.TeamId" class="btn btn-info">
                                    <i class="bi bi-eye"></i> Chi tiết
                                </a>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.TeamId" class="btn btn-warning">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.TeamId" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="empty-state">
                    <i class="bi bi-people display-1 text-muted"></i>
                    <h3 class="mt-3 text-muted">Không tìm thấy đội bóng nào</h3>
                    <p class="text-muted">Bạn có thể tạo đội bóng mới bằng cách nhấn vào nút "Thêm Đội Mới"</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .team-card {
        transition: all 0.3s ease;
        border-radius: 10px;
        overflow: hidden;
    }
    
    .team-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
    
    .team-logo-container {
        height: 180px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
        overflow: hidden;
    }
    
    .team-logo {
        max-height: 180px;
        max-width: 100%;
        object-fit: contain;
        transition: transform 0.3s ease;
    }
    
    .team-card:hover .team-logo {
        transform: scale(1.05);
    }
    
    .team-logo-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        color: #adb5bd;
    }
    
    .card-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
    }
    
    .card-actions .btn {
        flex: 1;
        padding: 0.375rem;
        font-size: 0.875rem;
    }
    
    .empty-state {
        padding: 2rem;
        background-color: #f8f9fa;
        border-radius: 10px;
    }
</style>
