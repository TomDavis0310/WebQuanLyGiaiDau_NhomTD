<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebQuanLyGiaiDau_NhomTD</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebQuanLyGiaiDau_NhomTD.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    WebQuanLyGiaiDau_NhomTD
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Product dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="productDropdown" data-bs-toggle="dropdown">
                                Games
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="productDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Sports" asp-action="List" asp-route-sportsId="2">⚽ Football</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Sports" asp-action="List" asp-route-sportsId="3">🏐 Volleyball</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Tournament" asp-action="List" asp-route-sportsId="1">🏀 Basketball</a>
                                </li>
                            </ul>
                        </li>

                        <!-- Resources dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="resourcesDropdown" data-bs-toggle="dropdown">
                                Resources
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="resourcesDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Camp" asp-action="Index">📅 Camps</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="League" asp-action="Index">🏆 Leagues</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Tournament" asp-action="Index">🎯 Tournaments</a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <div class="d-flex">
                        <a class="btn btn-outline-dark me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        <a class="btn btn-info text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2025 - WebQuanLyGiaiDau_NhomTD -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
