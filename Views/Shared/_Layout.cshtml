<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebQuanLyGiaiDau_NhomTD</title>

    <!-- Thư viện Bootstrap và CSS của dự án -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebQuanLyGiaiDau_NhomTD.styles.css" asp-append-version="true" />
</head>
<body>

    <!-- HEADER - Thanh navbar trên cùng -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <!-- Logo hoặc tên hệ thống -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    WebQuanLyGiaiDau_NhomTD
                </a>

                <!-- Nút hiện menu khi thu nhỏ màn hình -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- NAVIGATION LINKS -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- MENU CHÍNH: Dropdown đa cấp -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Product dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="productDropdown" data-bs-toggle="dropdown">
                                Games
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="productDropdown">
                                <li><a class="dropdown-item" href="#">⚽ Foodball</a></li>
                                <li><a class="dropdown-item" href="#">🏐 Volleyball</a></li>
                                <li><a class="dropdown-item" href="#">🏀 Baseball</a></li>
                            </ul>
                        </li>

                        <!-- Roles dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="rolesDropdown" data-bs-toggle="dropdown">
                                Roles
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="rolesDropdown">
                                <li><a class="dropdown-item" href="#">👨‍💼 Admins</a></li>
                                <li><a class="dropdown-item" href="#">🏀 Coaches</a></li>
                                <li><a class="dropdown-item" href="#">👨‍👩‍👧‍👦 Parents</a></li>
                            </ul>
                        </li>

                        <!-- Resources dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="resourcesDropdown" data-bs-toggle="dropdown">
                                Resources
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="resourcesDropdown">
                                <li><a class="dropdown-item" href="#">📅 Camps</a></li>
                                <li><a class="dropdown-item" href="#">🏆 Leagues</a></li>
                                <li><a class="dropdown-item" href="#">🎯 Tournaments</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- NÚT ĐĂNG NHẬP + DEMO -->
                    <div class="d-flex">
                        <a class="btn btn-outline-dark me-2" href="#">Login</a>
                        <a class="btn btn-info text-white" href="#">Register</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebQuanLyGiaiDau_NhomTD -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts JS cần thiết -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
