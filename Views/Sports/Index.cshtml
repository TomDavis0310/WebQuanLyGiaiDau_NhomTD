@model IEnumerable<WebQuanLyGiaiDau_NhomTD.Models.Sports>
@using WebQuanLyGiaiDau_NhomTD.Models.UserModel

@{
    ViewData["Title"] = "Chọn Môn Thể Thao";
}

<div class="bg-overlay">
    <h2 class="title-box text-center text-uppercase fw-bold text-danger">
        CHỌN MÔN THỂ THAO
    </h2>

    <div class="container py-5">
        @if (User.IsInRole(SD.Role_Admin))
        {
            <div class="text-end mb-4">
                <a asp-controller="Sports" asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Thêm Môn Thể Thao Mới
                </a>
            </div>
        }

        <div class="row justify-content-center g-4">
            @if (Model != null && Model.Any())
            {
                foreach (var sport in Model)
                {
                    <div class="col-6 col-md-4 col-lg-3 text-center mb-4">
                        <div class="position-relative">
                            <a asp-controller="Sports" asp-action="List" asp-route-sportsId="@sport.Id"
                               class="sport-card d-block text-decoration-none">
                                <div class="sport-box @GetRandomColor() d-flex align-items-center justify-content-center mx-auto">
                                    @if (!string.IsNullOrEmpty(sport.ImageUrl))
                                    {
                                        <img src="@sport.ImageUrl" alt="@sport.Name" class="img-fluid sport-image" />
                                    }
                                    else
                                    {
                                        <i class="bi bi-trophy-fill display-4"></i>
                                    }
                                </div>
                                <h5 class="mt-3 text-white">@sport.Name</h5>
                            </a>

                            @if (User.IsInRole(SD.Role_Admin))
                            {
                                <div class="admin-actions">
                                    <a asp-action="Edit" asp-route-id="@sport.Id" class="btn btn-sm btn-warning me-1" title="Chỉnh sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@sport.Id" class="btn btn-sm btn-danger" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-white">
                    <div class="alert alert-info">
                        <h4>Chưa có môn thể thao nào</h4>
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <p>Hãy thêm môn thể thao mới để bắt đầu.</p>
                        }
                        else
                        {
                            <p>Vui lòng liên hệ quản trị viên để thêm môn thể thao.</p>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string[] colors = new[] { "bg-primary", "bg-success", "bg-danger", "bg-warning", "bg-info" };
    Random random = new Random();

    string GetRandomColor()
    {
        return colors[random.Next(colors.Length)];
    }
}

<style>
    .bg-overlay {
        background: url('/images/basketball-bg.jpg') no-repeat center center;
        background-size: cover;
        position: relative;
        min-height: 100vh;
        padding-top: 50px;
    }

        .bg-overlay::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.7);
            z-index: 1;
        }

    .title-box {
        background-color: rgba(0, 0, 0, 0.8);
        color: red;
        padding: 10px 20px;
        border-radius: 5px;
        z-index: 2;
        position: relative;
        display: inline-block;
        margin-bottom: 30px;
    }

    .container {
        position: relative;
        z-index: 2;
    }

    .sport-box {
        width: 150px;
        height: 150px;
        border-radius: 25px;
        transition: transform 0.3s ease;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        color: white;
    }

    .sport-card:hover .sport-box {
        transform: scale(1.1);
    }

    .sport-image {
        max-width: 80%;
        max-height: 80%;
        object-fit: contain;
    }

    .admin-actions {
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 10;
        background-color: rgba(0, 0, 0, 0.6);
        padding: 5px;
        border-radius: 5px;
        display: flex;
    }
</style>
