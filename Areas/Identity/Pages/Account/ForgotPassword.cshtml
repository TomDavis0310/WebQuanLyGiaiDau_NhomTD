@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="text-center mb-4">
    <h1 class="h3 mb-3 fw-bold text-primary">
        <i class="bi bi-question-circle me-2"></i>
        Quên mật khẩu?
    </h1>
    <p class="text-muted">Đừng lo lắng! Nhập email của bạn và chúng tôi sẽ gửi hướng dẫn đặt lại mật khẩu.</p>
</div>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Input.Email" class="form-label">
            <i class="bi bi-envelope me-2"></i>Email
        </label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="d-grid mb-3">
        <button type="submit" class="btn btn-auth btn-lg">
            <i class="bi bi-arrow-clockwise me-2"></i>
            Gửi email đặt lại mật khẩu
        </button>
    </div>

    <div class="auth-links">
        <div class="text-center">
            <p class="mb-0">
                Nhớ lại mật khẩu?
                <a asp-page="./Login">
                    <i class="bi bi-box-arrow-in-right me-1"></i>
                    Đăng nhập ngay
                </a>
            </p>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
