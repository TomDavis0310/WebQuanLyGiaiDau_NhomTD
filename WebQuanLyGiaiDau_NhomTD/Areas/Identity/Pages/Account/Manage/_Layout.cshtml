@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<style>
    .manage-account-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px 15px 0 0;
        margin-bottom: 0;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .manage-account-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.3)"/><circle cx="80" cy="40" r="1.5" fill="rgba(255,255,255,0.2)"/><circle cx="40" cy="80" r="1" fill="rgba(255,255,255,0.4)"/></svg>');
        animation: sparkle 3s ease-in-out infinite;
    }

    .manage-account-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        position: relative;
        z-index: 1;
    }

    .manage-account-header h2 {
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 0;
        position: relative;
        z-index: 1;
    }

    .manage-content-wrapper {
        background: white;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .manage-nav-section {
        background: #f8f9fa;
        padding: 2rem;
        border-right: 1px solid #e9ecef;
    }

    .manage-content-section {
        padding: 2rem;
    }

    .nav-pills .nav-link {
        color: #6c757d;
        border-radius: 10px;
        padding: 0.75rem 1.25rem;
        margin-bottom: 0.5rem;
        transition: all 0.3s ease;
        border: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .nav-pills .nav-link:hover {
        background: rgba(102, 126, 234, 0.1);
        color: #667eea;
        transform: translateX(5px);
    }

    .nav-pills .nav-link.active {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        transform: translateX(5px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }

    @@keyframes sparkle {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }

    @@media (max-width: 768px) {
        .manage-account-header {
            padding: 1.5rem;
        }

        .manage-account-header h1 {
            font-size: 2rem;
        }

        .manage-nav-section,
        .manage-content-section {
            padding: 1.5rem;
        }

        .nav-pills .nav-link:hover,
        .nav-pills .nav-link.active {
            transform: none;
        }
    }
</style>

<div class="container-fluid px-0">
    <div class="manage-account-header">
        <h1><i class="bi bi-person-gear me-3"></i>Quản lý tài khoản</h1>
        <h2>Thay đổi cài đặt tài khoản của bạn</h2>
    </div>
    
    <div class="manage-content-wrapper">
        <div class="row g-0">
            <div class="col-md-3">
                <div class="manage-nav-section">
                    <partial name="_ManageNav" />
                </div>
            </div>
            <div class="col-md-9">
                <div class="manage-content-section">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
