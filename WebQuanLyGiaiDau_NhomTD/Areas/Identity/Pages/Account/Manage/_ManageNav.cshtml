@inject SignInManager<WebQuanLyGiaiDau_NhomTD.Models.ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<link rel="stylesheet" href="~/css/manage-layout.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/manage-nav.css" asp-append-version="true" />

<div class="manage-nav-wrapper slide-in-left">
    <!-- Nav Header -->
    <div class="nav-header">
        <i class="bi bi-gear-fill"></i>
        <h5>Cài Đặt Tài Khoản</h5>
    </div>

    <ul class="nav nav-pills flex-column">
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
                <i class="bi bi-person-fill"></i>
                <span>Hồ sơ cá nhân</span>
                <i class="bi bi-chevron-right ms-auto"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
                <i class="bi bi-envelope-fill"></i>
                <span>Quản lý Email</span>
                <i class="bi bi-chevron-right ms-auto"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
                <i class="bi bi-shield-lock-fill"></i>
                <span>Đổi mật khẩu</span>
                <i class="bi bi-chevron-right ms-auto"></i>
            </a>
        </li>
        @if (hasExternalLogins)
        {
            <li id="external-logins" class="nav-item">
                <a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">
                    <i class="bi bi-link-45deg"></i>
                    <span>Đăng nhập liên kết</span>
                    <i class="bi bi-chevron-right ms-auto"></i>
                </a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">
                <i class="bi bi-shield-check"></i>
                <span>Xác thực 2 bước</span>
                <i class="bi bi-chevron-right ms-auto"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
                <i class="bi bi-database-fill"></i>
                <span>Dữ liệu cá nhân</span>
                <i class="bi bi-chevron-right ms-auto"></i>
            </a>
        </li>
    </ul>

    <!-- Quick Stats -->
    <div class="nav-footer">
        <div class="quick-stat">
            <i class="bi bi-shield-check text-success"></i>
            <div>
                <small class="d-block text-muted">Bảo mật</small>
                <strong class="text-success">Tốt</strong>
            </div>
        </div>
    </div>
</div>
