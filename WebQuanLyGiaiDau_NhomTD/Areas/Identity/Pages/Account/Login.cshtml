@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="text-center mb-4">
    <h1 class="h3 mb-3 fw-bold text-primary">
        <i class="bi bi-box-arrow-in-right me-2"></i>
        Đăng nhập tài khoản
    </h1>
    <p class="text-muted">Chào mừng trở lại! Hãy đăng nhập để tiếp tục hành trình thể thao của bạn.</p>
</div>

<form id="account" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Input.Email" class="form-label">
            <i class="bi bi-envelope me-2"></i>Email
        </label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
        <label asp-for="Input.Password" class="form-label">
            <i class="bi bi-lock me-2"></i>Mật khẩu
        </label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="Input.RememberMe" />
        <label class="form-check-label" asp-for="Input.RememberMe">
            Ghi nhớ đăng nhập
        </label>
    </div>

    <div class="d-grid mb-3">
        <button id="login-submit" type="submit" class="btn btn-auth btn-lg">
            <i class="bi bi-box-arrow-in-right me-2"></i>
            Đăng nhập
        </button>
    </div>

    <div class="auth-links">
        <div class="row text-center">
            <div class="col-12 mb-2">
                <a id="forgot-password" asp-page="./ForgotPassword">
                    <i class="bi bi-question-circle me-1"></i>
                    Quên mật khẩu?
                </a>
            </div>
            <div class="col-12 mb-2">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                    <i class="bi bi-person-plus me-1"></i>
                    Đăng ký tài khoản mới
                </a>
            </div>
            <div class="col-12">
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">
                    <i class="bi bi-envelope-check me-1"></i>
                    Gửi lại email xác nhận
                </a>
            </div>
        </div>
    </div>
</form>

<!-- Phần Google OAuth - Hiển thị luôn để demo UI -->
<div class="external-auth">
    <div class="text-center mb-3">
        <hr class="my-4">
        <span class="text-muted bg-white px-3">HOẶC</span>
    </div>
    
    <div class="d-grid gap-2">
        <!-- Nút Google - Demo UI (sẽ hoạt động khi cấu hình OAuth) -->
        <button type="button" class="btn btn-google btn-lg" onclick="handleGoogleLogin()" title="Đăng nhập bằng Google">
            <svg class="google-icon" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Đăng nhập bằng Google
        </button>
    </div>
</div>

<!-- Phần External Logins thực tế (ẩn nếu chưa cấu hình) -->
@if ((Model.ExternalLogins?.Count ?? 0) > 0)
{
    <div class="external-auth-real" style="display: none;">
        <h3 class="text-center">
            <i class="bi bi-globe me-2"></i>
            Đăng nhập bằng dịch vụ khác
        </h3>
        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="d-grid gap-2">
                @foreach (var provider in Model.ExternalLogins!)
                {
                    @if (provider.Name.ToLower() == "google")
                    {
                        <button type="submit" class="btn btn-google btn-lg" name="provider" value="@provider.Name" title="Đăng nhập bằng Google">
                            <svg class="google-icon" viewBox="0 0 24 24">
                                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                            </svg>
                            Đăng nhập bằng Google
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-outline-primary btn-lg" name="provider" value="@provider.Name" title="Đăng nhập bằng @provider.DisplayName">
                            <i class="bi bi-@provider.Name.ToLower() me-2"></i>
                            Đăng nhập bằng @provider.DisplayName
                        </button>
                    }
                }
            </div>
        </form>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        function handleGoogleLogin() {
            // Redirect đến mock Google login để demo
            window.location.href = '/Identity/Account/MockGoogleLogin';
        }

        function showGoogleConfigModal() {
            // Tạo modal thông báo
            const modal = document.createElement('div');
            modal.innerHTML = `
                <div class="modal fade" id="googleConfigModal" tabindex="-1" aria-labelledby="googleConfigModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header bg-warning text-dark">
                                <h5 class="modal-title" id="googleConfigModalLabel">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    Google OAuth chưa được cấu hình
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <strong>Đăng nhập bằng Google hiện chưa khả dụng</strong>
                                </div>
                                
                                <p>Để kích hoạt tính năng đăng nhập bằng Google, vui lòng:</p>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card border-primary">
                                            <div class="card-header bg-primary text-white">
                                                <i class="bi bi-book me-2"></i>Hướng dẫn chi tiết
                                            </div>
                                            <div class="card-body">
                                                <p class="small">Hướng dẫn từng bước để cấu hình Google Cloud Console và OAuth 2.0</p>
                                                <button class="btn btn-outline-primary btn-sm" onclick="window.open('/docs/GOOGLE_OAUTH_HOÀN_THIỆN.md', '_blank')">
                                                    <i class="bi bi-arrow-right me-1"></i>Xem hướng dẫn
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card border-success">
                                            <div class="card-header bg-success text-white">
                                                <i class="bi bi-lightning me-2"></i>Hướng dẫn nhanh
                                            </div>
                                            <div class="card-body">
                                                <p class="small">Setup nhanh trong 5 phút</p>
                                                <button class="btn btn-outline-success btn-sm" onclick="window.open('/docs/GOOGLE_OAUTH_QUICK_START.md', '_blank')">
                                                    <i class="bi bi-arrow-right me-1"></i>Setup nhanh
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <hr class="my-3">
                                
                                <div class="alert alert-success">
                                    <i class="bi bi-check-circle me-2"></i>
                                    <strong>Trong thời gian này, bạn vẫn có thể đăng nhập bằng email và mật khẩu ở trên!</strong>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    <i class="bi bi-x-lg me-2"></i>Đóng
                                </button>
                                <button type="button" class="btn btn-primary" onclick="document.getElementById('Input_Email').focus(); bootstrap.Modal.getInstance(document.getElementById('googleConfigModal')).hide();">
                                    <i class="bi bi-envelope me-2"></i>Đăng nhập bằng Email
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            document.body.appendChild(modal);
            const googleModal = new bootstrap.Modal(document.getElementById('googleConfigModal'));
            googleModal.show();
            
            // Xóa modal sau khi đóng
            document.getElementById('googleConfigModal').addEventListener('hidden.bs.modal', function () {
                document.body.removeChild(modal);
            });
        }
    </script>
}
