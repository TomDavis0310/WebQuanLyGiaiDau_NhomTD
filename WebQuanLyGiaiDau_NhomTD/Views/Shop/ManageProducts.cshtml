@model IEnumerable<WebQuanLyGiaiDau_NhomTD.Models.RewardProduct>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container mt-4">
    <h2>Quản lý sản phẩm đổi điểm</h2>
    <p><a class="btn btn-primary" asp-action="CreateProduct">Thêm sản phẩm mới</a></p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Hình ảnh</th>
                <th>Tên</th>
                <th>Điểm</th>
                <th>Mô tả</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var p in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(p.ImageUrl))
                        {
                            <img src="@ImageUrlHelper.NormalizeImageUrl(p.ImageUrl)" alt="@p.Name" class="img-thumbnail" style="max-width: 80px; max-height: 80px; object-fit: cover;" />
                        }
                        else
                        {
                            <span class="text-muted">Chưa có</span>
                        }
                    </td>
                    <td>@p.Name</td>
                    <td>@p.PointsCost</td>
                    <td>@p.Description</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" asp-action="EditProduct" asp-route-id="@p.Id">Sửa</a>
                        <a class="btn btn-sm btn-danger" asp-action="DeleteProduct" asp-route-id="@p.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
