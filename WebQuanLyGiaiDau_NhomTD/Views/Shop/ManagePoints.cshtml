@model WebQuanLyGiaiDau_NhomTD.Models.PointsSetting
@{
    ViewData["Title"] = "Cài đặt điểm";
}

<div class="container mt-4">
    <h2>Cấu hình điểm cho các hành động</h2>
    <form asp-action="ManagePoints" method="post">
        <div class="mb-3">
            <label class="form-label">Điểm khi đọc tin tức</label>
            <input class="form-control" asp-for="ReadNewsPoints" />
        </div>
        <div class="mb-3">
            <label class="form-label">Điểm khi xem giải đấu</label>
            <input class="form-control" asp-for="ViewTournamentPoints" />
        </div>
        <div class="mb-3">
            <label class="form-label">Điểm khi bình chọn đội thắng trận</label>
            <input class="form-control" asp-for="VoteTeamPoints" />
        </div>
        <div class="mb-3">
            <label class="form-label">Điểm khi bình chọn vô địch giải đấu</label>
            <input class="form-control" asp-for="VoteTournamentPoints" />
        </div>
        <button class="btn btn-primary">Lưu</button>
    </form>
</div>
