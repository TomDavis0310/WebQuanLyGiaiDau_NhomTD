@model WebQuanLyGiaiDau_NhomTD.Models.RewardProduct
@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="container mt-4">
    <h2>Thêm sản phẩm đổi điểm</h2>
    <form asp-action="CreateProduct" method="post">
        <div class="mb-3">
            <label class="form-label">Tên</label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Điểm cần</label>
            <input class="form-control" asp-for="PointsCost" />
        </div>
        <div class="mb-3">
            <label class="form-label">Mô tả</label>
            <textarea class="form-control" asp-for="Description"></textarea>
        </div>
        <button class="btn btn-primary">Thêm</button>
        <a class="btn btn-secondary" asp-action="ManageProducts">Hủy</a>
    </form>
</div>
