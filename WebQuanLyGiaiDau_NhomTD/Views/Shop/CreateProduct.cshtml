@model WebQuanLyGiaiDau_NhomTD.Models.RewardProduct
@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="container mt-4">
    <h2>Thêm sản phẩm đổi điểm</h2>
    <form asp-action="CreateProduct" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Tên</label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Điểm cần</label>
            <input class="form-control" asp-for="PointsCost" />
        </div>
        <div class="mb-3">
            <label class="form-label">Mô tả</label>
            <textarea class="form-control" asp-for="Description"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Hình ảnh</label>
            <input type="file" class="form-control" name="imageFile" accept="image/*" />
            <small class="text-muted">Chọn hình ảnh cho sản phẩm (JPG, PNG, GIF)</small>
        </div>
        <button class="btn btn-primary">Thêm</button>
        <a class="btn btn-secondary" asp-action="ManageProducts">Hủy</a>
    </form>
</div>
