@model IEnumerable<WebQuanLyGiaiDau_NhomTD.Models.RewardProduct>
@{
    ViewData["Title"] = "Đổi điểm";
    var userPoints = ViewData["UserPoints"] as int? ?? 0;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Đổi điểm</h2>
        <div class="d-flex align-items-center gap-3">
            <div class="user-points text-end">
                <small>Điểm hiện có</small>
                <div class="h4">@userPoints</div>
            </div>
            @* Nếu user là admin, hiển thị link quản lý sản phẩm / quản lý điểm *@
            @if (User.IsInRole(WebQuanLyGiaiDau_NhomTD.Models.UserModel.SD.Role_Admin))
            {
                <div class="admin-actions">
                    <a class="btn btn-outline-primary btn-sm me-2" asp-action="ManageProducts" asp-controller="Shop">Quản lý sản phẩm</a>
                    <a class="btn btn-outline-secondary btn-sm me-2" asp-action="ManagePoints" asp-controller="Shop">Quản lý điểm</a>
                </div>
            }
            @* Nếu user đã đăng nhập, hiển thị link Túi quà tặng *@
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div>
                    <a class="btn btn-success btn-sm" asp-action="MyRewards" asp-controller="Shop">
                        <i class="bi bi-gift-fill"></i> Túi quà tặng
                    </a>
                </div>
            }
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                @* Thêm data-cost để JS kiểm tra xem user có đủ điểm hay không *@
                <div class="card product-card" data-id="@item.Id" data-cost="@item.PointsCost" style="cursor:pointer;">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@ImageUrlHelper.NormalizeImageUrl(item.ImageUrl)" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="bi bi-gift" style="font-size: 4rem; color: white;"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="fw-bold text-danger">Điểm cần: @item.PointsCost</p>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-action="RedeemProduct" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                <i class="bi bi-cart-plus"></i> Đổi quà
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-outline-primary">
                                Đăng nhập để đổi
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
}

