@{
    ViewData["Title"] = "Thống kê bình chọn";
    var matches = ViewData["Matches"] as List<WebQuanLyGiaiDau_NhomTD.Models.Match>;
    var tournaments = ViewData["Tournaments"] as List<WebQuanLyGiaiDau_NhomTD.Models.Tournament>;
    var matchVotes = ViewData["MatchVotes"] as List<WebQuanLyGiaiDau_NhomTD.Models.MatchVote>;
    var tournamentVotes = ViewData["TournamentVotes"] as List<WebQuanLyGiaiDau_NhomTD.Models.TournamentVote>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>
                <i class="bi bi-graph-up me-2"></i>Thống Kê Bình Chọn
            </h2>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Chọn Trận Đấu</h5>
                        </div>
                        <div class="card-body">
                            <form method="get">
                                <div class="mb-3">
                                    <select name="matchId" class="form-select" onchange="this.form.submit()">
                                        <option value="">-- Chọn trận đấu --</option>
                                        @if (matches != null)
                                        {
                                            @foreach (var match in matches)
                                            {
                                                var isSelected = ViewData["SelectedMatchId"]?.ToString() == match.Id.ToString();
                                                <option value="@match.Id" selected="@isSelected">
                                                    @match.TeamA vs @match.TeamB - @match.MatchDate.ToString("dd/MM/yyyy")
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Chọn Giải Đấu</h5>
                        </div>
                        <div class="card-body">
                            <form method="get">
                                <div class="mb-3">
                                    <select name="tournamentId" class="form-select" onchange="this.form.submit()">
                                        <option value="">-- Chọn giải đấu --</option>
                                        @if (tournaments != null)
                                        {
                                            @foreach (var tournament in tournaments)
                                            {
                                                var isSelected = ViewData["SelectedTournamentId"]?.ToString() == tournament.Id.ToString();
                                                <option value="@tournament.Id" selected="@isSelected">
                                                    @tournament.Name - @tournament.StartDate.ToString("dd/MM/yyyy")
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            
            @if (matchVotes != null && matchVotes.Any())
            {
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-trophy me-2"></i>Bình Chọn Trận Đấu
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Người Dùng</th>
                                        <th>Đội Được Chọn</th>
                                        <th>Thời Gian</th>
                                        <th>Ghi Chú</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var vote in matchVotes)
                                    {
                                        <tr>
                                            <td>@vote.User?.FullName</td>
                                            <td>
                                                <span class="badge bg-info">@vote.VotedTeam</span>
                                            </td>
                                            <td>@vote.VoteTime.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@vote.Notes</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h5>Tổng Lượt Bình Chọn</h5>
                                        <h2 class="text-primary">@matchVotes.Count</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6>Thống Kê Theo Đội:</h6>
                                        @{
                                            var votesByTeam = matchVotes.GroupBy(v => v.VotedTeam).ToDictionary(g => g.Key, g => g.Count());
                                        }
                                        @foreach (var team in votesByTeam)
                                        {
                                            var percentage = Math.Round((double)team.Value / matchVotes.Count * 100, 1);
                                            <div class="mb-2">
                                                <div class="d-flex justify-content-between">
                                                    <span>@team.Key</span>
                                                    <span>@team.Value votes (@percentage%)</span>
                                                </div>
                                                <div class="progress">
                                                    <div class="progress-bar" style="width: @percentage%"></div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            @if (tournamentVotes != null && tournamentVotes.Any())
            {
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-award me-2"></i>Bình Chọn Vô Địch
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Người Dùng</th>
                                        <th>Đội Được Chọn</th>
                                        <th>Thời Gian</th>
                                        <th>Ghi Chú</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var vote in tournamentVotes)
                                    {
                                        <tr>
                                            <td>@vote.User?.FullName</td>
                                            <td>
                                                <span class="badge bg-warning text-dark">@vote.VotedTeamName</span>
                                            </td>
                                            <td>@vote.VoteTime.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@vote.Notes</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h5>Tổng Lượt Bình Chọn</h5>
                                        <h2 class="text-success">@tournamentVotes.Count</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6>Thống Kê Theo Đội:</h6>
                                        @{
                                            var votesByChampion = tournamentVotes.GroupBy(v => v.VotedTeamName).ToDictionary(g => g.Key, g => g.Count());
                                        }
                                        @foreach (var team in votesByChampion.OrderByDescending(x => x.Value))
                                        {
                                            var percentage = Math.Round((double)team.Value / tournamentVotes.Count * 100, 1);
                                            <div class="mb-2">
                                                <div class="d-flex justify-content-between">
                                                    <span>@team.Key</span>
                                                    <span>@team.Value votes (@percentage%)</span>
                                                </div>
                                                <div class="progress">
                                                    <div class="progress-bar bg-warning" style="width: @percentage%"></div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            @if ((matchVotes == null || !matchVotes.Any()) && (tournamentVotes == null || !tournamentVotes.Any()))
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h4 class="text-muted">Chưa có dữ liệu bình chọn</h4>
                    <p class="text-muted">Hãy chọn trận đấu hoặc giải đấu để xem thống kê</p>
                </div>
            }
            
            <div class="mt-4">
                <a asp-action="Settings" class="btn btn-primary">
                    <i class="bi bi-arrow-left me-2"></i>Quay Lại Cài Đặt
                </a>
            </div>
        </div>
    </div>
</div>