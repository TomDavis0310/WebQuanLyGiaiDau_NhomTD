@model WebQuanLyGiaiDau_NhomTD.Models.News

@{
    ViewData["Title"] = "Xóa Tin Tức";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Xác Nhận Xóa Tin Tức
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="alert alert-warning">
                        <h5>Bạn có chắc chắn muốn xóa tin tức này?</h5>
                        <p class="mb-0">Hành động này không thể hoàn tác.</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Thông Tin Tin Tức</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Tiêu đề:</dt>
                                <dd class="col-sm-8">@Model.Title</dd>
                                
                                <dt class="col-sm-4">Tác giả:</dt>
                                <dd class="col-sm-8">@Model.Author</dd>
                                
                                <dt class="col-sm-4">Danh mục:</dt>
                                <dd class="col-sm-8">@Model.Category</dd>
                                
                                <dt class="col-sm-4">Ngày đăng:</dt>
                                <dd class="col-sm-8">@Model.PublishDate.ToString("dd/MM/yyyy HH:mm")</dd>
                                
                                <dt class="col-sm-4">Lượt xem:</dt>
                                <dd class="col-sm-8">@Model.ViewCount</dd>
                            </dl>
                        </div>
                        <div class="col-md-6 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Title" class="img-thumbnail" style="max-height: 200px;" />
                            }
                            else
                            {
                                <div class="bg-light p-4 rounded text-muted">
                                    <i class="bi bi-image display-4"></i>
                                    <p>Không có hình ảnh</p>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <h6>Tóm tắt:</h6>
                        <p class="text-muted">@Model.Summary</p>
                    </div>

                    <form asp-action="Delete" asp-route-id="@Model.NewsId" method="post">
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay Lại
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Xác Nhận Xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>