@model IEnumerable<WebQuanLyGiaiDau_NhomTD.Models.Poll>
@{
    ViewData["Title"] = "Polls của tôi";
}

<div class="container mt-4">
    <h2>Polls đã tạo</h2>
    @if (!Model.Any())
    {
        <div class="alert alert-info">Bạn chưa tạo poll nào.</div>
    }
    else
    {
        foreach (var p in Model)
        {
            <div class="card mb-2">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">@p.Title</h5>
                        <small class="text-muted">@p.StartAt.ToString("dd/MM/yyyy") - @p.EndAt.ToString("dd/MM/yyyy")</small>
                    </div>
                    <div>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@p.Id">Chi tiết</a>
                        <form asp-action="Publish" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@p.Id" />
                            <button class="btn btn-sm btn-warning">Công bố kết quả</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>
